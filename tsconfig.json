{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "alwaysStrict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
  },
  "include": ["src","declaration.d.ts"]
}